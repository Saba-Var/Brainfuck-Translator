---
type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <style is:global>
      body {
        font-family: system-ui, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #fafafa;
        box-sizing: border-box;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
      }
    </style>
  </body>
</html>
