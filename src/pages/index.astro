---
import Layout from '../layouts/Layout.astro'
import BrainfuckTranslator from '../components/BrainfuckTranslator.astro'
---

<Layout>
  <div class="container">
    <h1>Text to Brainfuck Translator</h1>
    <p class="description">
      Convert any text into Brainfuck code. Enter your text below and click
      translate.
    </p>

    <BrainfuckTranslator />
  </div>
</Layout>

<style>
  h1 {
    text-align: center;
    color: #333;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .description {
    text-align: center;
    color: #666;
    margin-bottom: 2rem;
  }
</style>
